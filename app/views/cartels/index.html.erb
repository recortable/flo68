<div class="actions">
  <%= link_to 'Añadir un cartel', new_cartel_path %>
</div>


<table>
  <thead>
    <tr>
      <td>Miniatura</td><td>Título</td><td>Posición</td><td>Tamaño</td><td>&nbsp;</td>
    </tr>
  </thead>
  <tbody>
    <% @cartels.each do |cartel| %>
    <tr>
      <td><%= link_to( image_tag(cartel.image.url(:thumb)), cartel.image.url )  %></td>
      <td><%= cartel.title %></td>
      <td><%= cartel.position %></td>
      <td><%= number_to_human_size(cartel.image.size) %>
        <%= cartel.image.content_type %><br/>
        (<%= cartel.width %> x <%= cartel.height %> px)</td>
      <td class="actions">
        <%= link_to 'Modificar', edit_cartel_path(cartel ) %>
        <%= link_to 'Borrar', cartel_path(cartel), :method => :delete,
          :confirm => "Estás segura de borrar el cartel '#{cartel.title}'" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>