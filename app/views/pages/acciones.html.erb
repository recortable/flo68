
<% content_for :head do -%>
  <script type="text/javascript">
    $(function() {
      $("#main_video").vimeo({url: '<%= @video.url %>', generator : '<%= @video.generator %>', width: 426, height: 319});

      var carteles = [];
  <% Cartel.all.each do |cartel| %>
      carteles.push({title : '<%= cartel.title %>', url : '<%= cartel.image.url %>',
        width : <%= cartel.width %> , height : <%= cartel.height %>});
  <% end %>
    $("#slideshow").slide(carteles);
  });
  </script>
<% end -%>


<div id="content">
  <div id="content_top">&nbsp;</div>
  <div id="slideshow">
  </div>
  <%= render 'videos', :videos => @section.videos, :action => 'acciones' %>
</div>
<div id="side">
  <div id="viewer">
    <div id="main_video" class="video"></div>
  </div>
  <div id="comments-head">&nbsp;</div>
  <div id="comments">
    <%= render 'comment' %>
    <%= render 'comments', :object => @video.comments %>
  </div>
</div>

