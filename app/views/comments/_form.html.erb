
<% semantic_form_for([@comment]) do |form|  %>
  <% form.inputs do %>
    <%= form.input :author %>
    <%= form.input :email %>
    <%= form.input :body, :as => :text %>
    <%= form.input :published_at %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button %>
    <%= link_to 'Cancelar', section_video_video_comments_path(@comment.video.section, @comment.video) %>
  <% end %>
<% end %>